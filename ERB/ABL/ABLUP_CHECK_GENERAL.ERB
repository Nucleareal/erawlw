
@PRINT_UPGRADE_AVAILABLE_STATUS, ARG

SIF ARG == 0
	PRINT ＯＫ

SIF ARG & 1
	PRINT 珠不足 

SIF ARG & 2
	PRINT 経験不足 

SIF ARG & 4
	PRINT 能力不足 

;番号表示
@PRINT_UPGRADE_AVAILABLE_PREFIX, ARG, ARG:1

PRINTFORM [\@ARG == 0 ? {ARG:1,2,RIGHT} # --\@] - 

;可否表示
@PRINT_UPGRADE_AVAILABLE_POSTFIX, ARG

PRINTFORML \@ARG == 0 ? ○ # ×\@ 

;珠表示
@PRINT_UPGRADE_AVAILABLE_JUEL, ARG, ARG:1

PRINTFORM %PALAMNAME:ARG%の珠 x{ARG:1} 

;経験表示
@PRINT_UPGRADE_AVAILABLE_EXP, ARG, ARG:1

PRINTFORM %EXPNAME:(ARG)%が{ARG:1}以上 