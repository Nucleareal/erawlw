@SHOW_JUEL
DRAWLINE
A = 0
REPEAT 12
	IF COUNT != 3
		SIF COUNT == 11
			COUNT = 100
		PRINTFORM %PALAMNAME:COUNT%の珠：
		;表示位置そろえる
		IF JUEL:COUNT < 10
			PRINT     
		ELSEIF JUEL:COUNT < 100
			PRINT    
		ELSEIF JUEL:COUNT < 1000
			PRINT   
		ELSEIF JUEL:COUNT < 10000
			PRINT  
		ENDIF
		PRINTV JUEL:COUNT

		;改行or表示位置あけ
		IF A%5 == 4
			PRINTL 
		ELSE
			PRINT  
		ENDIF
		A = A + 1
	ENDIF
REND
PRINTL 
