;-------------------------------------------------
; 助手選択
;-------------------------------------------------
@CHANGE_ASSI
$PRINT_LIST
DRAWLINE
PRINTFORML 現在の助手は\@(ASSI >= 0) ? %CALLNAME:ASSI%です # いません\@
PRINTFORML 誰を助手にしますか？
DRAWLINE
IF TARGET >= 0
	PRINTL   [ 0]助手を使わない
	DRAWLINE
ENDIF

REPEAT CHARANUM
	SIF COUNT == 0
		CONTINUE
	
	CALL JUDGE_ABLE_ASSI, COUNT

	IF RESULT == 0
		PRINTFORML [--]%NAME:COUNT% - ×助手化可能な条件を満たしていません
		CONTINUE
	ENDIF
		
	PRINTFORM [{COUNT,2,RIGHT}]%NAME:COUNT% - ○助手化可能です
	
	IF ASSI == COUNT
		FONTSTYLE 1
		PRINT (助手)
		FONTSTYLE 0
	ELSEIF ISASSI:COUNT
		PRINT (元助手)
	ENDIF
	
	PRINTL
REND
DRAWLINE
PRINTLC [1000]戻る
PRINTL 

$INPUT_LOOP
INPUT
IF RESULT == 1000
	RETURN 0
ELSEIF RESULT == 0
	RESULT = -1
ELSEIF RESULT < 0 || RESULT >= CHARANUM || RESULT == ASSI
	GOTO INPUT_LOOP
ENDIF

SIF RESULT == TARGET
	TARGET = -1

ASSI = RESULT
SIF ASSI > 0
	ISASSI:ASSI |= 1

STR:2 = 使わないよう
PRINTFORML 助手を%ASSI > 0 ? CALLNAME:ASSI # STR:2%にしました

;-------------------------------------------------
; 助手にできるかどうか
;-------------------------------------------------
@JUDGE_ABLE_ASSI, ARG

IF (ABL:ARG:0 >= 3 && ABL:ARG:1 >= 3 && ABL:ARG:2 >= 3 && ABL:ARG:3 >= 3 && ABL:ARG:9 >= 3)
	RETURN 1
ENDIF

IF (ABL:ARG:0 >= 5 && ABL:ARG:1 >= 4)
	RETURN 2
ENDIF

RETURN 0

