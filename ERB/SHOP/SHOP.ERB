PRINTFORM {DAY+1}日目
IF TIME == 0
	PRINTL  午前
ELSE
	PRINTL  午後
ENDIF

IF MASTER >= 0
	CALL LIFE_BAR(MASTER)
ENDIF
IF TARGET >= 0
	PRINTFORM %CALLNAME%(奴隷)
	CALL LIFE_BAR(TARGET)
ENDIF
IF ASSI >= 0
	PRINTFORM %CALLNAME:ASSI%(助手)
	CALL LIFE_BAR, ASSI
ENDIF

PRINTFORML 所持金:{MONEY}リーフ
PRINT_ITEM

SIF TARGET > 0
	PRINTFORMLC [100] - %NAME_SHOPCOMMAND_100()%
IF CHARANUM > 0 && TARGET > 0
	PRINTLC [101] - 能力の表示
	PRINTLC [102] - 休ませる
ENDIF

SIF CHARANUM > 1
	PRINTLC [109] - 調教対象変更

IF MONEY > 0
	PRINTLC [110] - 道具購入
	PRINTLC [111] - 奴隷購入
ENDIF

PRINTFORMLC [112] - 奴隷売却
	
SIF CHARANUM > 1
	PRINTLC [113] - 助手変更
	
SIF ITEM:42
	PRINTLC [140] - 主人性別変更

PRINTLC [200] - セーブ
PRINTLC [300] - ロード

SIF MONEY >= 1000000
	PRINTLC [543] - 時は満ちた

PRINTLC [777] - コンフィグ

SIF TALENT:MASTER:998 && TARGET > 0
	PRINTLC [999] - 違法改造

;--------------------------------------------------
;SHOPメニュー(ユーザーSHOP)
;--------------------------------------------------
@USERSHOP
IF RESULT == 100 && TARGET >= 0
	BEGIN TRAIN
	RETURN 1
ELSEIF RESULT == 101 && CHARANUM > 0
	CALL SHOW_INFO_WLW
ELSEIF RESULT == 102
	PRINTFORML \@(TIME == 0) ? 夜まで休む # 朝まで寝る\@ことにした……
	;休憩フラグを立てる
	FLAG:0 = 1
	BEGIN TURNEND
	RETURN 1
ELSEIF RESULT == 109
	CALL CHANGE_TARGET
ELSEIF RESULT == 110 && MONEY > 0
	CALL TOOL_BUY_MAIN
ELSEIF RESULT == 111 && MONEY > 0
	CALL CHARA_BUY_MAIN
ELSEIF RESULT == 112
	CALL CHARA_SALE
ELSEIF RESULT == 113
	CALL CHANGE_ASSI
ELSEIF RESULT == 140 && ITEM:42
	CALL CHANGE_SEX, MASTER
	RETURN 1
ELSEIF RESULT == 200
	;セーブする際の不要な変数リセット処理
	CALL RESET_VAR_SAVE
	SAVEGAME
ELSEIF RESULT == 300
	LOADGAME
ELSEIF RESULT == 543
	CALL ENDING_1
ELSEIF RESULT == 777
	TFLAG:201 = 0
	CALL SWEET_POTATO_CONFIGURATION
ELSEIF RESULT == 999
	CALL CHEAT_SLAVE_STATUS
ELSE
	REUSELASTLINE  
ENDIF
RETURN 0

