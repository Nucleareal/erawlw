@ITEM_BOUGHT_30

IF ITEM:30
	DRAWLINE
	PRINTFORML %ITEMNAME:30%を誰に使用しますか？
	
	REPEAT CHARANUM
		SIF COUNT == 0
			CONTINUE
		
		IF TALENT:0
			PRINTFORM [---] - %NAME:COUNT%
			FONTSTYLE 1
			PRINTL ×処女です
			FONTSTYLE 0
			CONTINUE
		ENDIF
		
		PRINTFORML [{COUNT,3,RIGHT}] - %NAME:COUNT% ○復活できます
	REND
	
	DRAWLINE
	PRINTFORML [100] - 戻る(払い戻しします)
	DRAWLINE

$INPUT_LOOP_1
	INPUT
	IF RESULT == 100
		ITEM:30 = 0
		MONEY += ITEMPRICE:30
		PRINTW 払い戻ししました
		RETURN 0
	ENDIF
	
	IF RESULT <= 0 || RESULT >= CHARANUM
		CLEARLINE 1
		REUSELASTLINE 正しい値を入力してください
		GOTO INPUT_LOOP_1
	ENDIF
	
	IF TALENT:RESULT:0
		CLEARLINE 1
		REUSELASTLINE 正しい値を入力してください
		GOTO INPUT_LOOP_1
	ENDIF
	
	TALENT:RESULT:0 = 1
	ITEM:30 = 0
	PRINTL %CALLNAME%の%TALENTNAME:0%が復活しました
	DRAWLINE
	
ENDIF