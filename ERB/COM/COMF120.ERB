@COM120
TSTR:0 = 膣鏡
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM
;バイブ
LOSEBASE:0 += 20
LOSEBASE:1 += 80

SOURCE:12 = 9000

;膣鏡は快感を与える器具ではないのでSOURCE:1に関する記述はスキップする
;潤滑が充分でない場合痛みが発生する
;!;[SKIPSTART]

;ABL:Ｖ感覚をみる
IF ABL:4 == 0
	SOURCE:1 = 80
ELSEIF ABL:4 == 1
	SOURCE:1 = 250
ELSEIF ABL:4 == 2
	SOURCE:1 = 600
ELSEIF ABL:4 == 3
	SOURCE:1 = 1000
ELSEIF ABL:4 == 4
	SOURCE:1 = 1300
ELSE
	SOURCE:1 = 1700
ENDIF

;!;[SKIPEND]

;EXP:Ｖ経験をみる

;処女
SELECTCASE EXP:0
	CASE IS < EXPLV:1
		SOURCE:6 = 6000
		
		EXP:50 += 2
		PRINTFORML %EXPNAME:50%＋２
	CASE IS < EXPLV:2
		SOURCE:6 = 300
	CASE IS < EXPLV:3
		SOURCE:6 = 50
	CASE IS < EXPLV:4
		SOURCE:6 = 2
	CASE IS < EXPLV:5
		SOURCE:6 = 0
	CASEELSE
		SOURCE:6 = 0
ENDSELECT

;!;[SKIPSTART]
IF EXP:0 < EXPLV:1
	SOURCE:6 = 6000

	EXP:50 += 2
	PRINTFORML %EXPNAME:50%＋２
ELSEIF EXP:0 < EXPLV:2
	TIMES SOURCE:1 , 0.60
	SOURCE:6 = 300
ELSEIF EXP:0 < EXPLV:3
	TIMES SOURCE:1 , 1.00
	SOURCE:6 = 50
ELSEIF EXP:0 < EXPLV:4
	TIMES SOURCE:1 , 1.20
	SOURCE:6 = 10
ELSEIF EXP:0 < EXPLV:5
	TIMES SOURCE:1 , 1.40
	SOURCE:6 = 0
ELSE
	TIMES SOURCE:1 , 1.60
	SOURCE:6 = 0
ENDIF
;!;[SKIPEND]

C = PALAM:3

;PALAM:潤滑をみる
IF C < PALAMLV:1
	SOURCE:6 += 1000
	TIMES SOURCE:6 , 4.00
ELSEIF C < PALAMLV:2
	SOURCE:6 += 500
	TIMES SOURCE:6 , 1.50
ELSEIF C < PALAMLV:3
	TIMES SOURCE:6 , 0.50
ELSEIF C < PALAMLV:4
	TIMES SOURCE:6 , 0.20
ELSEIF C >= PALAMLV:4
	TIMES SOURCE:6 , 0.10
ENDIF

;!;[SKIPSTART]
;PALAM:欲情をみる
IF PALAM:5 < PALAMLV:1
	TIMES SOURCE:1 , 0.80
ELSEIF PALAM:5 < PALAMLV:2
	TIMES SOURCE:1 , 0.90
ELSEIF PALAM:5 < PALAMLV:3
	TIMES SOURCE:1 , 1.00
ELSEIF PALAM:5 < PALAMLV:4
	TIMES SOURCE:1 , 1.10
ELSEIF PALAM:5 >= PALAMLV:4
	TIMES SOURCE:1 , 1.20
ENDIF

;ABL:従順をみる
IF ABL:0 == 0
	TIMES SOURCE:1 , 0.80
ELSEIF ABL:0 == 1
	TIMES SOURCE:1 , 0.90
ELSEIF ABL:0 == 2
	TIMES SOURCE:1 , 1.00
ELSEIF ABL:0 == 3
	TIMES SOURCE:1 , 1.10
ELSEIF ABL:0 == 4
	TIMES SOURCE:1 , 1.20
ELSE
	TIMES SOURCE:1 , 1.30
ENDIF
;!;[SKIPEND]

;小柄体形
SIF TALENT:30
	TIMES SOURCE:6 , 1.75
	
;∨敏感、鈍感をみる
IF TALENT:104
	TIMES SOURCE:6 , 1.50
	TIMES SOURCE:13 , 1.50
	TIMES SOURCE:14 , 1.50
ELSEIF TALENT:103
	TIMES SOURCE:6 , 0.60
	TIMES SOURCE:13 , 0.60
	TIMES SOURCE:14 , 0.60
ENDIF

EXP:0 += 2
PRINTL Ｖ経験＋２

;バイブの着脱
IF TEQUIP:7
	TEQUIP:7 = 0
ELSE
	TEQUIP:7 = 1
	TEQUIP:1 = 0
ENDIF
CALL DISPLAY_EQUIP_MESSAGE_COM_SLAVE, 1
CALL DISPLAY_EQUIP_MESSAGE_COM_ASSI, 1

RETURN 1



@EQUIP_COM120
DEBUGPRINTL 膣鏡A

@EQUIP_COM7
DEBUGPRINTL 膣鏡B

;膣鏡挿入中

PRINTL ＜膣鏡挿入中＞

LOSEBASE:0 += 15
LOSEBASE:1 += 60

;SOURCE:6の元
B = 50
SOURCE:11 = 800
SOURCE:12 = 6000
SOURCE:13 = 400
SOURCE:14 = 300

;PALAM:潤滑をみる
IF PALAM:3 < PALAMLV:1
	B += 400
	TIMES B , 3.00
	C += 1000
ELSEIF PALAM:3 < PALAMLV:2
	B += 150
	TIMES B , 1.00
	C += 200
ELSEIF PALAM:3 < PALAMLV:3
	TIMES B , 0.50
	C += 80
ELSEIF PALAM:3 < PALAMLV:4
	TIMES B , 0.20
ELSEIF PALAM:3 >= PALAMLV:4
	TIMES B , 0.10
ENDIF

;小柄体形
SIF TALENT:30
	TIMES B , 2.00

;貞操観念
IF TALENT:100
	;処女はありえない
	TIMES C, 3.00
ENDIF

SOURCE:6 += B

EXP:0 += 1
PRINTL Ｖ経験＋１

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +2
	EXP:40 += 2
	
	SIF PLAYER != MASTER
		EXP:PLAYER:40 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:41 += 1
ENDIF

