@COM57
TSTR:0 = アロマ(ジャスミン)
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM

;気分を高揚させるアロマ

;アロマによる体力/気力の減少
LOSEBASE:0 += 30
LOSEBASE:1 += 30

;逸脱
SOURCE:14 = 100

;不快30, 抑鬱10低下 欲情50上昇
DOWN:12 = 200
DOWN:13 = 100
UP:5 = 500

SOURCE:4  = 250
SOURCE:13 = 50

;薬毒耐性
IF TALENT:44
	TIMES DOWN:12 , 0.5
	TIMES DOWN:13 , 0.5
	TIMES UP:5 , 0.5
ENDIF

ITEM:25 -= 1
;ポットを使用中にする
TEQUIP:12 = 1
;ローズを使用中にする
TEQUIP:25 = 1

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +1
	EXP:40 += 1

	SIF PLAYER != MASTER
		EXP:PLAYER:40 += 1

ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +1
	EXP:41 += 1
ENDIF

RETURN 1

