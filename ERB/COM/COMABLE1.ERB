@COM_ABLE70

;[烙印を押す] 実行判定

;既に烙印が押されている場合付与できない
SIF TALENT:89
	RETURN 0

;関係が125以上でないとだめ
SIF RELATION:TARGET:(NO:PLAYER) < 125
	RETURN 0
	
DEBUGPRINTL C
	
;プレイヤーでない場合
IF PLAYER != MASTER
	;助手からの関係も125以上でないとだめ
	SIF RELATION:PLAYER:(NO:TARGET) < 125
		RETURN 0
	
	;すなわちレズなのでレズっ気5でないとだめ
	SIF ABL:TARGET:9 < 5 || ABL:PLAYER:9 < 5
		RETURN 0
	
	;レズ中毒もLv3いる
	SIF ABL:TARGET:12 < 3 || ABL:PLAYER:12 < 3
		RETURN 0
		
	;レズ経験も1500必要
	SIF EXP:TARGET:40 < 1500 || EXP:PLAYER:40 < 1500
		RETURN 0
		
	DEBUGPRINTL D
ELSE
;プレイヤーの場合
	
	;面倒くさいので無理にしておく
	RETURN 0
	
ENDIF

;苦痛刻印が必要
SIF MARK:TARGET:0 < 0
	RETURN 0
	
DEBUGPRINTL E
	
RETURN 1
