;Ｖおねだり

;-------------------------------------------------
;実行できるかの判定
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮
;(従順が高いと命令に従いやすいなど)
CALL COM_ORDER

;ABL:欲望
IF ABL:1
	SIF S
		PRINT  + 
	A += ABL:1 * 4
	PRINTS ABLNAME:1
	PRINTV 'LV,ABL:1,'(,ABL:1 * 4,')
	S = 1
ENDIF
;ABL:奉仕精神
IF ABL:6
	SIF S
		PRINT  + 
	A += ABL:6 * 4
	PRINTS ABLNAME:6
	PRINTV 'LV,ABL:6,'(,ABL:6 * 4,')
	S = 1
ENDIF
;ABL:精液中毒
IF ABL:11
	SIF S
		PRINT  + 
	A += ABL:11 * 2
	PRINTS ABLNAME:11
	PRINTV 'LV,ABL:11,'(,ABL:11 * 2,')
	S = 1
ENDIF

IF ABL:4
	SIF S
		PRINT  + 
	A += ABL:4 * 2
	PRINTS ABLNAME:4
	PRINTV 'LV,ABL:4,'(,ABL:4 * 2,')
ENDIF

IF MARK:1
	SIF S
		PRINT  + 
	A += MARK:1 * 2
	PRINTS MARKNAME:1
	PRINTV 'LV,MARK:1,'(,MARK:1 * 2,')
	S = 1
ENDIF


;PALAM:欲情
IF PALAM:5 < PALAMLV:1
	L = 0
ELSEIF PALAM:5 < PALAMLV:2
	L = 1
ELSEIF PALAM:5 < PALAMLV:3
	L = 2
ELSEIF PALAM:5 < PALAMLV:4
	L = 3
ELSEIF PALAM:5 < PALAMLV:5
	L = 4
ELSE
	L = 5
ENDIF

IF L
	SIF S
		PRINT  + 
	A += L * 4
	PRINTS PALAMNAME:5
	PRINTV 'LV,L,'(,L * 4,')
	S = 1
ENDIF

;恥じらい
IF TALENT:35
	PRINT  - 
	A -= 4
	PRINTS TALENTNAME:35
	PRINTV '(,4,')
	S = 1
ENDIF
;快感の否定
IF TALENT:71
	PRINT  - 
	A -= 4
	PRINTS TALENTNAME:71
	PRINTV '(,4,')
	S = 1
ENDIF
;男嫌い
IF TALENT:82 && TALENT:PLAYER:122
	PRINT  - 
	A -= 12
	PRINTS TALENTNAME:82
	PRINTV '(,12,')
	S = 1
ENDIF
;恋慕
IF TALENT:85 && ASSIPLAY == 0
	SIF S
		PRINT  + 
	A += 3
	PRINTS TALENTNAME:85
	PRINTV '(,3,')
	S = 3
ENDIF

;調教者がふたなり
IF TALENT:PLAYER:121
	SIF S
		PRINT  + 
	A += 8
	PRINTS TALENTNAME:121
	PRINTV '(,8,')
	S = 1
ENDIF

;媚薬
IF TEQUIP:21
	SIF S
		PRINT  + 
	A += 8
	PRINTS ITEMNAME:21
	PRINTV '(,8,')
	S = 1
ENDIF

;合計を表示(48以上で実行)
PRINT  = 
PRINTV A

V = 48
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

WAIT

;実行できない
IF A < V
	CALL DISPLAY_KOJO_DENIAL_MESSAGE_COM, 160
	RETURN 0
ENDIF

;-------------------------------------------------
;実行決定
;-------------------------------------------------
TSTR:0 = Ｖおねだり
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM



LOSEBASE:0 += 0
LOSEBASE:1 += 50

SOURCE:11 = 1000
SOURCE:12 = 500
SOURCE:13 = 3200
SOURCE:14 = 100

;ABL:奉仕精神をみる
SELECTCASE ABL:6
	CASE 0
		SOURCE:4 = 200
		SOURCE:5 = 100
	CASE 1
		SOURCE:4 = 250
		SOURCE:5 = 180
	CASE 2
		SOURCE:4 = 300
		SOURCE:5 = 250
	CASE 3
		SOURCE:4 = 350
		SOURCE:5 = 350
	CASE 4
		SOURCE:4 = 400
		SOURCE:5 = 500
	CASEELSE
		SOURCE:4 = 450
		SOURCE:5 = 800
ENDSELECT


;ABL:技巧をみる
IF ABL:2 == 0
	TIMES SOURCE:4 , 0.70
	TIMES SOURCE:5 , 0.70
ELSEIF ABL:2 == 1
	TIMES SOURCE:4 , 0.90
	TIMES SOURCE:5 , 0.90
ELSEIF ABL:2 == 2
	TIMES SOURCE:4 , 1.00
	TIMES SOURCE:5 , 1.00
ELSEIF ABL:2 == 3
	TIMES SOURCE:4 , 1.20
	TIMES SOURCE:5 , 1.20
ELSEIF ABL:2 == 4
	TIMES SOURCE:4 , 1.40
	TIMES SOURCE:5 , 1.40
ELSE
	TIMES SOURCE:4 , 1.60
	TIMES SOURCE:5 , 1.60
ENDIF

;ABL:Ｃ感覚をみる
IF ABL:3 == 0
	SOURCE:0 = 0
ELSEIF ABL:3 == 1
	SOURCE:0 = 10
ELSEIF ABL:3 == 2
	SOURCE:0 = 50
ELSEIF ABL:3 == 3
	SOURCE:0 = 200
ELSEIF ABL:3 == 4
	SOURCE:0 = 600
ELSE
	SOURCE:0 = 2000
ENDIF

;PALAM:潤滑
IF PALAM:3 < PALAMLV:1
	TIMES SOURCE:0 , 0.30
	TIMES SOURCE:4 , 0.60
ELSEIF PALAM:3 < PALAMLV:2
	TIMES SOURCE:0 , 0.60
	TIMES SOURCE:4 , 0.80
ELSEIF PALAM:3 < PALAMLV:3
	TIMES SOURCE:0 , 1.00
	TIMES SOURCE:4 , 1.00
ELSEIF PALAM:3 < PALAMLV:4
	TIMES SOURCE:0 , 1.50
	TIMES SOURCE:4 , 1.20
ELSEIF PALAM:3 < PALAMLV:5
	TIMES SOURCE:0 , 2.00
	TIMES SOURCE:4 , 1.40
ELSE
	TIMES SOURCE:0 , 2.50
	TIMES SOURCE:4 , 1.60
ENDIF



;奴隷のＶ⇔奴隷の指の汚れが移動
STAIN:3 |= STAIN:1
STAIN:1 |= STAIN:3

IF TALENT:122 == 0 && TALENT:PLAYER:122 == 0
	PRINTS EXPNAME:40
	PRINTL +6
	EXP:40 += 6
	SIF PLAYER != MASTER
		EXP:PLAYER:40 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +7
	EXP:41 += 7
ENDIF

TFLAG:100 = 1

;屈服刻印３に相当
TFLAG:200 = 3

