PRINTFORML %EXPNAME:1%＋２

LOCAL:0 = RUT_CHECK(NO:TARGET, 0)

;TODO: 欲情処理の追加
IF RUT_AVAILABLE && LOCAL:0
	SELECTCASE CHARACTER_RUT_TYPE(TARGET)
;猫
		CASE 1
			IF TEQUIP:5
				SOURCE:11 += 6000
				SOURCE:14 /= 2
				SOURCE:15 = 0
			ENDIF
;狐
		CASE 2
			IF TEQUIP:6
				SOURCE:11 += 3000
				SOURCE:14 /= 2
				SOURCE:15 /= 4
			ENDIF
	ENDSELECT
ENDIF

