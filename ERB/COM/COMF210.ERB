VARSET LOCAL , 0

TSTR:0 = Ａプラグを引っ張る
CALL DISPLAY_KOJO_TRAIN_MESSAGE_F_COM
;スパンキング
;実際には苦痛があるためもっと体力気力をもっていかれる
LOSEBASE:0 += 20
LOSEBASE:1 += 50

SOURCE:11 = 100
SOURCE:12 = 200
SOURCE:13 = 300
SOURCE:14 = 500
SOURCE:15 = 100

;PALAM:苦痛をみる
IF PALAM:9 < PALAMLV:1
	SOURCE:6 = 300
ELSEIF PALAM:9 < PALAMLV:2
	SOURCE:6 = 500
ELSEIF PALAM:9 < PALAMLV:3
	SOURCE:6 = 800
ELSEIF PALAM:9 < PALAMLV:4
	SOURCE:6 = 1200
ELSEIF PALAM:9 >= PALAMLV:4
	SOURCE:6 = 1800
ENDIF

;A経験
