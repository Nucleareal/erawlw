	PRINTL +4
	EXP:40 += 4
	SIF PLAYER != MASTER
		EXP:PLAYER:40 += 2
ELSEIF TALENT:122 == 1 && TALENT:PLAYER:122 == 1
	PRINTS EXPNAME:41
	PRINTL +2
	EXP:41 += 2
ENDIF

