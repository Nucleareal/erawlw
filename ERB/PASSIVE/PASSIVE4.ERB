@PASSIVE_BOUGHT_4, ARG, ARG:1

SIF ASSI < 0
	RETURN 0

SIF NO:ASSI != ARG:1
	RETURN 0
	
SIF TALENT:ASSI:(200+ARG:1) == 0
	RETURN 0

DRAWLINE
PRINTFORML ――[%TALENTNAME:(200+ARG:1)%]発動――
DRAWLINE

PRINTL どれを消去しますか？
PRINT 消去可能素質:

V:9 = CHARANUM - 1

REPEAT 200
	SIF COUNT == 0
		CONTINUE

	IF TALENT:(V:9):COUNT
		PRINTFORM [{COUNT,4}]%TALENTNAME:COUNT% 
	ENDIF
REND
PRINTL
PRINTL [1000]消去しない

$INPUT_LOOP
INPUT
IF RESULT <= 0
	CLEARLINE 1
	GOTO INPUT_LOOP
ELSEIF RESULT >= 200 && RESULT != 1000
	CLEARLINE 1
	GOTO INPUT_LOOP
ELSEIF TALENT:(V:9):RESULT == 0
	CLEARLINE 1
	GOTO INPUT_LOOP
ENDIF

SIF RESULT == 1000
	RETURN 0

TALENT:(V:9):RESULT = 0

PRINTFORML [%TALENTNAME:RESULT%]を消去しました
WAIT
DRAWLINE

RETURN 0
