@PASSIVE_BOUGHT_3, ARG, ARG:1

SIF ASSI < 0
	RETURN 0

SIF NO:ASSI != ARG:1
	RETURN 0
	
SIF TALENT:ASSI:(200+ARG:1) == 0
	RETURN 0

DRAWLINE
PRINTFORML ――[%TALENTNAME:(200+ARG:1)%]発動――
DRAWLINE

LOCAL = -1
REPEAT 10
	SIF ITEMNAME:COUNT == ""
		CONTINUE
		
	SIF ITEM:COUNT
		CONTINUE
	
	LOCAL = COUNT
	BREAK
REND

IF LOCAL >= 0
	ITEM:LOCAL = 1
ENDIF

TALENT:ASSI:(200+ARG:1) = 0

PRINTFORML %ITEMNAME:LOCAL%を取得しました
WAIT

RETURN 1
