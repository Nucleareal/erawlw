@PASSIVE_TURNEND, ARG, ARG:1

;SELFチェック
SIF TARGET != ARG
	RETURN 0
	
SIF TALENT:0 && EXP:0 == 0
	RETURN 0

DRAWLINE
PRINTFORML ――[%TALENTNAME:(200+ARG:1)%]発動――
DRAWLINE

IF TALENT:0 == 0
	TALENT:0 = 1
	PRINTFORML %CALLNAME%の%TALENTNAME:0%が復活しました
ENDIF

IF EXP:0 > 0
	EXP:0 = 0
	PRINTFORML %CALLNAME%の%EXPNAME:0%がなくなりました
ENDIF

WAIT
DRAWLINE

RETURN 0
